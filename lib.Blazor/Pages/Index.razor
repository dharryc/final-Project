@using lib;
@using System.Collections.Generic;
@page "/"
@code {
    public string userName;
    public string errorTime;
    List<playerData> playerBase = new List<playerData>();
    public void doAdd()
    {
        if (userName != null)
        {
            playerBase.Add(new playerData(userName));
            errorTime = null;
        }
        else
        {
            errorTime = "You IMBICILE! YOU FOOL!!! ENTER A REAL NAME!!!";
        }
    }
}

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>
<input type='text' @bind='userName'>
<p>@errorTime</p><br />
<button @onclick='doAdd'> Yo, let's make some new buttons</button>
Welcome to your new app.
<h1></h1>
@foreach (playerData user in playerBase)
{
    <h1>@user.userName</h1>
}
